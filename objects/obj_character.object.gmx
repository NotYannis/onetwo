    }
}
if (invulnerability &gt;= 0){
    if(invulnerability % 6 &gt;= 1 &amp;&amp; invulnerability % 6 &lt;= 3) image_alpha = 0;
    else image_alpha = 1;
    hit = false;
    invulnerability--;
}

if(wait &gt; 0) wait --;

// Death
if (hp &lt;= 0){
