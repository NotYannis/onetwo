} 


if ((place_meeting(x,y,obj_ennemy_shadow)) &amp;&amp; (strike = false) &amp;&amp; (hit &lt;= 1)){
    life = 0;
}


// Death

if (life = 0){
    room_goto(Game_Over);
}

//----------- Gravity and jump ------------
//-----------------------------------------
if (place_meeting(x,y+1, obj_ground01)) { // Player on the ground so he can jump. 
