            <string>///Phase 2 : UFO
if(phase == 2){
    //Launching : smoothly fly to yMaxLimit and then stop
    if(launch &amp;&amp; wait == 0){
        invulnerable = true;
        yMaxLimit = 280;
        if(y &gt; yMaxLimit) currentVSpeed -=0.2;
        else{
            launch = false;
            startFlying = true;
            invulnerable = true;
            wait = 20;
            sprite_index = spr_boss_test2;
            rotationSpeed = 4;
            yMaxLimit += 10;
            yMinLimit = 270;
            xMinLimit = view_xview + 200;
            xMaxLimit = view_wview - 200;
            currentVSpeed = 0;
            currentHSpeed = 0;
            if(!instance_exists(obj_boss_rotate))
               instance_create(x, y, obj_boss_rotate);
        }
    }
    
    if(startFlying &amp;&amp; wait == 0){ //When it begin to fly
        rotate = true;
        startFlying = false;
        fly = true;
        currentHSpeed = 15;
        currentVSpeed = 1;
    }
    
    //Flying : go back and forth horizontally
    if(fly &amp;&amp; wait == 0){
        if(!flyOut &amp;&amp; !flyMid){
            if(x &gt; xMaxLimit){
                if(currentHSpeed &gt; -15) currentHSpeed -= 1;
                flyOutDir = -1;
            }
            else if(x &lt; xMinLimit){
                if (currentHSpeed &lt; 15) currentHSpeed += 1;
                flyOutDir = 1;
            }
            if(y &gt; yMaxLimit){
                currentVSpeed -= 0.3;
            }
            else if(y &lt; yMinLimit){
                currentVSpeed += 0.3;
            }
            //Attack cooldown
            if(currentHSpeed == 0) nextAttack--;
        }
        else if (flyOut &amp;&amp; !flyMid){//Fly Out : go out of the room
            //Into the room : accelerate
            if((x &gt; view_xview - 100 &amp;&amp; flyOutDir == -1)
            || (x &lt; view_wview + 100 &amp;&amp; flyOutDir == 1)){
                currentHSpeed *= 1.2;
                currentVSpeed *= 1.2;
            }
            else{ //Out of the room : pattern instanciation
                fly = false;
                flyOut = false;        
                attack = true;
                if(pattern == 0){
                    currentHSpeed = -8 * flyOutDir;
                    currentVSpeed = -40;
                    yMaxLimit = 692;
                    yMinLimit = 640;
                    xMaxLimit = view_wview;
                    xMinLimit = view_xview;
                    y = yMaxLimit;
                    if(flyOutDir == -1) x = -10;
                    else x = view_wview + 10
                    image_angle = 90 * -(flyOutDir);
                    rotationSpeed = 0;
                    stopPattern = 25;
                    
                }
                else if(pattern == 1){
                    currentHSpeed = 0.3;
                    currentVSpeed = 0;
                    y = irandom_range(600, 726);
                    xMaxLimit = view_wview + 70;
                    xMinLimit = view_xview - 70;
                    image_angle = 0;
                    stopPattern = 5;
                }
            }
        }
        else if (flyMid){
            if(x &gt;= view_wview/2 + 100 || x &lt;= view_wview/2 - 100){
                currentHSpeed += 1 * flyOutDir;
            }
            else {
                if(currentHSpeed != 0)
                    currentHSpeed -= 5 * flyOutDir;
                else{
                    currentHSpeed = 0;
                    if(rotate &amp;&amp; (abs(image_angle) % 180) &lt;= 92 &amp;&amp; (abs(image_angle) % 180) &gt;= 88){
                        wait = 30;
                        rotate = false;
                    }
                    else if(!rotate &amp;&amp; wait == 0){
                        illusion = instance_create(x, y, obj_boss_illusion);
                        illusion2 = instance_create(x, y, obj_boss_illusion);
                        fly = false;
                        attack = true;
                        boss[0] = id;
                        boss[1] = illusion;
                        boss[2] = illusion2;
                    }
                }
            }
        }
    }
    
    if(nextAttack == 0){//Attack instanciation
        nextAttack = 3;
        pattern = irandom(2);
        if(pattern == 0 || pattern == 1){
            flyOut = true;
            currentHSpeed = 0.5 * flyOutDir;
            currentVSpeed = 0.05;
            if(pattern == 0) stopPattern = 20;
            else stopPattern = 2;
        }
        if(pattern == 2){
            flyMid = true;
            currentHSpeed = 1 * flyOutDir;
            currentVSpeed = 0;
            stopPattern = 3;
        }
    }
    
    //Attack : do the random picked pattern
    if(attack){
        invulnerable = true;
        if(pattern == 0){ //Jump on the ground
            if(!flyOut){
                if(y &gt; yMaxLimit){
                    currentVSpeed = -40;
                    currentHSpeed = irandom_range(5 * sign(currentHSpeed), 15 * sign(currentHSpeed));
                    stopPattern --;
                }
                else if(y &lt; yMinLimit &amp;&amp; currentVSpeed &lt; 40){
                    currentVSpeed += 4;
                    rotationSpeed = 9;
                }
                else rotationSpeed = 0;
                
                //Go in the other way
                if(x &lt; xMinLimit &amp;&amp; (abs(image_angle) % 180) == 90){
                    rotationDir = -1;
                    currentHSpeed = 5;
                }
                else if(x &gt; xMaxLimit &amp;&amp; (abs(image_angle) % 180) == 90){
                    rotationDir = 1;
                    currentHSpeed = -5;
                }
                //launch an orb
                if(distance_to_object(obj_yellow) &gt; 400){
                    if(rotationDir == -1 &amp;&amp; abs(image_angle % 180) == 54){
                        orb = instance_create(x + 64, y + 12, obj_boss_orb);
                        
                    }
                    else if(rotationDir == 1 &amp;&amp; abs(image_angle % 180) == 135){
                        orb = instance_create(x - 64, y + 12, obj_boss_orb);
                    }
                }
            }
        }
        if(pattern == 1){ //Go back and forth horizontally and really fastly
            if(!flyOut){
                //Go in the other way
                if(x &lt; xMinLimit || x &gt; xMaxLimit){
                    y = irandom_range(600, 726);
                    
                }
                if(x &lt; xMinLimit){
                    currentHSpeed = 0.5;
                    x = xMinLimit + 1;
                    stopPattern--;
                }
                else if (x &gt; xMaxLimit){
                    currentHSpeed = -0.5;
                    x = xMaxLimit - 1;
                    stopPattern--;
                }
                else{//Throw bullets on player
                    instance_create(x, y, obj_boss_orb);
                }
                currentHSpeed *= 1.1;
            }
        }
        if(pattern == 2){//Fall under the player with 2 illusions
            if(flyMid &amp;&amp; wait == 0){
                if(illusion.x &gt; view_wview/2 - 200){
                    for(i = 1; i &lt;= 2; i++){
                        boss[i].rotationSpeed = rotationSpeed;
                    }
                    illusion.currentHSpeed = -1;
                    illusion2.currentHSpeed = 1;
                    illusion.rotationDir = -1;
                }
                else if(illusion.x &gt;= view_wview/2 - 200 + illusion.hspeed
                        &amp;&amp; illusion.x &lt;= view_wview/2 - 200 - illusion.hspeed){
                    for(i = 0; i &lt; 3; i++){
                        boss[i].currentVSpeed = -1;
                    }
                }
                else{
                    for(i = 0; i &lt; 3; i++){
                        boss[i].currentVSpeed *= 1.08;
                    }
                    illusion.currentHSpeed *= 1.05;
                    illusion2.currentHSpeed *= 1.05;
                }
                if(illusion.y &lt; - 70){
                    for(i = 0; i &lt; 3; i++){
                        boss[i].rotate = false;
                        boss[i].image_angle = 90;
                        boss[i].speed = 0;
                        boss[i].followPlayer = true;
                    }
                    flyMid = false;
                    wait = 210;
                    next = irandom(2);
                }
            }
            else{
                if(wait &gt; 0){
                    if(wait % 70 != 0){
                        if(boss[next % 3].y &lt; -70){
                            boss[next % 3].x = irandom_range(440, 840);
                            boss[next % 3].y = 0;
                        }
                        else if(boss[next % 3].y &lt; 400){
                            with boss[next % 3]{
                                motion_add(point_direction(x, y, obj_yellow.x, obj_yellow.y), 1.5);
                            }
                        }
                        if(boss[next % 3].y &gt; 700 - speed){
                            if(boss[next % 3] == id){
                                y += vspeed * 1.5;
                                x += hspeed * 1.5;
                            }
                            boss[next % 3].currentVSpeed = 0;
                            boss[next % 3].currentHSpeed = 0;
                            boss[next % 3].followPlayer = false;
                        }
                        if(wait % 70 == 1){
                            stopPattern--
                            show_debug_message("hay");
                            if(stopPattern == 0){
                                for(i = 1; i &lt; 3; i++){
                                    boss[i].isFading = true;
                                }
                            }
                        }
                    }
                    else{
                        next++;
                    }
                }
            }
        }
        if(stopPattern == 0){
            wait = 20;
            launch = true;
            attack = false;
            currentVSpeed = 0;
            currentHSpeed = 0;
            rotate = false;
        }
    }
    //Rotate : rotate the sprite
    if(rotate){
        image_angle += rotationSpeed * rotationDir;
        image_angle = image_angle % 360;
    }
    
    if(wait &gt; 0) wait--;
    
    if(!followPlayer){
        hspeed = currentHSpeed;
        vspeed = currentVSpeed;
    }
}
